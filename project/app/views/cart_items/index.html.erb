<p id="notice"><%= notice %></p>

<h1>Cart Items</h1>

<table>
  <thead>
    <tr>
      <th>Customer ID</th>
      <th>Product ID</th>
      <th>Quantity</th>
      <th>Added Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.user.user_id %></td>
        <td><%= cart_item.product.product_id if cart_item.product %></td>
        <td><%= cart_item.quantity %></td>
        <td><%= time_ago_in_words(cart_item.created_at) %></td>
        <td><%= link_to 'Show', cart_item %></td>
        <td><%= link_to 'Edit', edit_cart_item_path(cart_item) %></td>
        <td><%= link_to 'Destroy', cart_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cart Item', new_cart_item_path %>

<%= link_to 'Submit Transaction', transaction_items_path %>
