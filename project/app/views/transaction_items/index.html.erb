<p id="notice"><%= notice %></p>

<h1>Transaction Items</h1>

<table>
  <thead>
    <tr>
      <th>Product ID</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_items.each do |transaction_item| %>
      <tr>
        <td><%= transaction_item.cart_item.product.product_id %></td>
        <td><%= transaction_item.cart_item.quantity %></td>
        <td><%= transaction_item.price %></td>
        <td><%= link_to 'Show', transaction_item %></td>
        <td><%= link_to 'Edit', edit_transaction_item_path(transaction_item) %></td>
        <td><%= link_to 'Destroy', transaction_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction Item', new_transaction_item_path %>
