<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :product_id %>
    <%= form.number_field :product_id %>
  </div>

  <div class="field">
    <%= form.label :product_name %>
    <%= form.text_field :product_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :retail_price %>
    <%= form.text_field :retail_price %>
  </div>

  <div class="field">
    <%= form.label :sales %>
    <%= form.number_field :sales %>
  </div>

  <div class="field">
    <%= form.label :image_directory %>
    <%= form.text_field :image_directory %>
  </div>

  <div><%= form.collection_select(:color_id, Color.all, :id, :description) %></div>

  <div><%= form.collection_select(:size_id, Size.all, :id, :size_name) %></div>

  <div><%= form.collection_select(:type_id, Type.all, :id, :product_type_name) %></div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
