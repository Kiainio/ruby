<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Product name</th>
      <th>Description</th>
      <th>Retail price</th>
      <th>Sales</th>
      <th>Image</th>
      <th>Color</th>
      <th>Size</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_id %></td>
        <td><%= product.product_name %></td>
        <td><%= product.description %></td>
        <td><%= product.retail_price %></td>
        <td><%= product.sales %></td>
        <td><%= image_tag("#{product.image_directory}") %></td>
        <td><%= product.color.description if product.color %></td>
        <td><%= product.size.size_name if product.size %></td>
        <td><%= product.type.product_type_name if product.type %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

